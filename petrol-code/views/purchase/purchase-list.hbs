<div class="container first">
    <h1>Historial de ahorro</h1>
<hr>
    <ul class="list-group">
        {{#each fiteredArr}}
        <li class="list-group-item">
            <p>Gasto: {{amount}}€</p>
            <p>Ahorro: {{saving}}€</p>

            <a href="/gastos/editar/{{_id}}" class="btn btn-warning">Editar</a>

            <form action="/gastos/eliminar-gasto/{{_id}}" method="POST">
                <button class="btn btn-danger">Eliminar</button>
            </form>
        </li>
        {{/each}}
    </ul>

    <p class="d-none" id="pValue">{{page}}</p>
    <div class="nexPrev">
        <button id="prevBtn">Previus</button>
         <button id="nextBtn">Next</button>
    </div>
</div>

<script src="/js/scriptFilter.js"></script>


<div class="container first">
    <h1>Tus gastos</h1>
    <hr>
    <ul class="list-group">
        {{#each fiteredArr}}
        <div class="row d-flex justify-content-center">
            <div class="col-md-8">
                <li>
                    <div class="each-purchase d-flex justify-content-between">
                        <div class="purchase-text">
                            <p class="p-purchase">Gasto: {{amount}} €</p>
                            <p class="p-no-margin">Ahorro: {{saving}} €</p>
                        </div>
                        <div class="purchase-buttons d-flex align-items-center">
                            <a href="/gastos/editar/{{_id}}" class="btn btn-warning edit-btn">Editar</a>
                            <form action="/gastos/eliminar-gasto/{{_id}}" method="POST">
                                <button class="btn btn-danger remove-btn">Eliminar</button>
                            </form>
                        </div>
                    </div>
                </li>
            </div>
        </div>
        {{/each}}
    </ul>

    <p class="d-none" id="pValue">{{page}}</p>
    <div class="nexPrev">
        <button id="prevBtn">Previus</button>
        <button id="nextBtn">Next</button>
    </div>
</div>

<script src="/js/scriptFilter.js"></script>

